<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sapra.uevents"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:icon="@drawable/icon"
        android:theme="@style/UEvents"
        android:label="@string/app_name" >
        <service android:name=".MyService" android:process=":sapra"> </service>
        <activity
            android:name="com.sapra.uevents.SplashScreen">
            <intent-filter>
	   	 			<action android:name="android.intent.action.MAIN" />
					<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
        <activity
            android:name="com.sapra.uevents.LoginPage"
            android:label="@string/app_name"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
    		android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name="com.sapra.uevents.LoginUsingActivityActivity"
            	android:label="@string/app_name"
            	android:launchMode="singleTop"
                android:configChanges="orientation"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.sapra.uevents.About"
            	android:label="@string/app_name"
                android:configChanges="orientation"
    			android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.sapra.uevents.SchoolActivity"
            	android:label="@string/app_name"
                android:configChanges="orientation"
    			android:screenOrientation="portrait">
        </activity>
        <activity 	android:name="com.sapra.uevents.SingleListItem"
            		android:parentActivityName="com.sapra.uevents.LoginUsingActivityActivity" >
       				<!-- Parent activity meta-data to support API level 7+ -->
       			 	<meta-data
            			android:name="android.support.PARENT_ACTIVITY"
            			android:value="com.sapra.uevents.LoginUsingActivityActivity" />      
        </activity>
        <activity
			    android:name="com.facebook.LoginActivity"
				android:label="@string/app_name">
		</activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id" />
    </application>

</manifest>
