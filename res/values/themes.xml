<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="UEvents" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
		<item name="android:actionBarItemBackground">@drawable/actionbar_selector</item>
		<item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_selector</item>
        <item name="android:titleTextStyle">@style/UEvents.TitleTextStyle</item>
    </style>
    <style name="UEvents.TitleTextStyle">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">20sp</item>
    </style>
    <style name="ActionBarTabStyle">
         <item name="android:background">@drawable/tab_bar_background</item>
         <item name="android:gravity">center</item>
    </style>
</resources>
